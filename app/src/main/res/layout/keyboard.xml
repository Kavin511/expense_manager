<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <androidx.cardview.widget.CardView
            android:id="@+id/one_value"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="1"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/two_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="2"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/three_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="3"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/addition_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="+"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/four_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="4"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/five_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="5"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/six_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="6"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/subtraction_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="-"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/seven_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="7"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/eight_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="8"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/nine_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="9"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/multiplication_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="x"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">


        <androidx.cardview.widget.CardView
            android:id="@+id/decimal_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="."
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/zero_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/equal_to_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="="
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/division_operator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_margin"
            android:layout_weight="1"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/keyboard_key_padding"
            app:cardCornerRadius="@dimen/default_radius"
            app:cardElevation="@dimen/default_elevation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/default_margin"
                android:padding="@dimen/keyboard_key_padding"
                android:text="/"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/primary_button_padding"
        android:text="@string/save_transaction"
        android:textColor="?attr/colorSurface" />
</LinearLayout>